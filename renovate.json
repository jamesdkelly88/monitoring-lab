{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranchPatterns": [
    "main"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "matchBaseBranches": [
        "main"
      ],
      "automerge": false,
      "ignoreTests": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchBaseBranches": [
        "main"
      ],
      "automerge": true,
      "ignoreTests": true
    }
  ]
}
